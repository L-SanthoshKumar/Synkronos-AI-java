                }
              ]
            }
          }
        },
        {
          "name": "Update Application Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"SHORTLISTED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/applications/:id/status",
              "host": ["{{baseUrl}}"],
              "path": ["applications", ":id", "status"],
              "variable": [
                {
                  "key": "id",
                  "value": "application-id-here"
                }
              ]
            }
          }
        }
      ]
    },
