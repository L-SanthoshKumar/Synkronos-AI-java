              "raw": "{\n  \"jobId\": \"job-id-here\",\n  \"coverLetter\": \"I am very interested in this position...\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/applications",
              "host": ["{{baseUrl}}"],
              "path": ["applications"]
