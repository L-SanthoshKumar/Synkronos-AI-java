        {
          "name": "Get Applications for Job",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/applications/job/:jobId",
              "host": ["{{baseUrl}}"],
              "path": ["applications", "job", ":jobId"],
              "variable": [
                {
                  "key": "jobId",
